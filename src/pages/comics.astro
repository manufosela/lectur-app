---
import Layout from '../layouts/Layout.astro';
import AppFooter from '../components/AppFooter.astro';
---

<Layout title="LecturAPP - Cómics">
  <div class="comics-container">
    <!-- Header de cómics -->
    <header class="comics-header">
      <button id="back-to-menu" class="back-to-menu" title="Volver al menú">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
      </button>
      <img class="logo clickable-logo" src="/images/logo64x64.png" alt="LecturAPP" title="Volver al inicio" />
      <h1 class="title">Cómics <span class="comics-count">(<span id="header-num-comics">0</span> disponibles)</span></h1>
      <div class="header-actions">
        <span id="user-email" class="user-email"></span>
        <button id="theme-toggle" class="theme-toggle" title="Cambiar tema">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"></circle>
            <path d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"></path>
          </svg>
        </button>
        <button id="logout-btn" class="logout-btn" title="Cerrar sesión">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
            <polyline points="16,17 21,12 16,7"/>
            <line x1="21" y1="12" x2="9" y2="12"/>
          </svg>
        </button>
      </div>
    </header>

    <!-- Buscador de cómics -->
    <div class="comics-search">
      <input 
        type="text" 
        id="search-comics" 
        placeholder="Buscar cómic por título, serie o autor..."
        class="search-input"
      />
    </div>

    <!-- Vista de galería de cómics -->
    <div class="comics-grid" id="comics-grid">
      <!-- Los cómics se cargarán dinámicamente aquí -->
    </div>

    <!-- Visor de cómic -->
    <div id="comic-viewer" class="comic-viewer hidden">
      <div class="viewer-header">
        <button id="close-viewer" class="close-viewer">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
        <div class="viewer-info">
          <span id="comic-title"></span>
          <span id="page-info">Página 1 de 1</span>
        </div>
        <div class="viewer-controls">
          <button id="zoom-out" title="Zoom -">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
              <line x1="8" y1="11" x2="14" y2="11"/>
            </svg>
          </button>
          <button id="zoom-reset" title="Ajustar">100%</button>
          <button id="zoom-in" title="Zoom +">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"/>
              <path d="m21 21-4.35-4.35"/>
              <line x1="11" y1="8" x2="11" y2="14"/>
              <line x1="8" y1="11" x2="14" y2="11"/>
            </svg>
          </button>
          <button id="fullscreen" title="Pantalla completa">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3"/>
            </svg>
          </button>
        </div>
      </div>
      
      <div class="viewer-content">
        <!-- Navegación izquierda -->
        <button id="prev-page" class="nav-button nav-left">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15 18 9 12 15 6"/>
          </svg>
        </button>
        
        <!-- Contenedor de la imagen -->
        <div id="page-container" class="page-container">
          <img id="comic-page" class="comic-page" alt="Página del cómic" />
        </div>
        
        <!-- Navegación derecha -->
        <button id="next-page" class="nav-button nav-right">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"/>
          </svg>
        </button>
      </div>
      
      <!-- Miniaturas de páginas -->
      <div id="thumbnails" class="thumbnails hidden">
        <!-- Las miniaturas se cargarán dinámicamente -->
      </div>
    </div>

    <!-- Overlay de carga -->
    <div id="comic-overlay" class="comic-overlay hidden">
      <div class="comic-loader"></div>
      <p>Cargando cómic...</p>
    </div>

    <AppFooter content="Biblioteca digital de cómics" />
  </div>

  <!-- Estilos específicos para cómics -->
  <style>
    .comics-container {
      min-height: 100vh;
      background: var(--bg-primary);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .comics-header {
      display: flex;
      align-items: center;
      padding: 1rem;
      background: var(--bg-header);
      color: var(--text-header);
      gap: 1rem;
    }

    .comics-search {
      padding: 1rem;
      background: var(--bg-secondary);
    }

    .search-input {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid var(--border-primary);
      border-radius: 8px;
      font-size: 1rem;
      background: var(--bg-primary);
      color: var(--text-primary);
    }

    .comics-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1.5rem;
      padding: 1.5rem;
      flex: 1;
      overflow-y: auto;
      overflow-x: hidden;
    }

    .comic-card {
      cursor: pointer;
      transition: transform 0.3s ease;
      background: var(--bg-card);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: var(--shadow-card);
    }

    .comic-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    }

    /* Estilos para carpetas */
    .folder-card {
      cursor: pointer;
      transition: transform 0.3s ease;
      background: var(--bg-card);
      border-radius: 8px;
      overflow: hidden;
      box-shadow: var(--shadow-card);
      border: 2px solid var(--primary);
      display: flex;
      align-items: center;
      padding: 1rem;
      gap: 1rem;
    }

    .folder-card:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
      border-color: var(--primary-hover);
    }

    .folder-icon {
      font-size: 2rem;
      min-width: 60px;
      text-align: center;
    }

    .folder-info {
      flex: 1;
    }

    .folder-title {
      font-weight: bold;
      color: var(--text-primary);
      margin-bottom: 0.25rem;
      font-size: 1.1rem;
    }

    .folder-count {
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    /* Breadcrumb navigation */
    .breadcrumb {
      display: flex;
      align-items: center;
      padding: 0.75rem 1rem;
      background: var(--bg-secondary);
      border-radius: 8px;
      margin-bottom: 1rem;
      font-size: 0.9rem;
    }

    .breadcrumb-btn {
      background: none;
      border: none;
      color: var(--primary);
      cursor: pointer;
      text-decoration: underline;
      font-size: inherit;
      padding: 0.25rem 0.5rem;
      border-radius: 4px;
      transition: background 0.2s ease;
    }

    .breadcrumb-btn:hover {
      background: var(--bg-primary);
    }

    .current-folder {
      color: var(--text-primary);
      font-weight: bold;
    }

    .comic-cover {
      width: 100%;
      aspect-ratio: 3/4;
      object-fit: cover;
    }

    .comic-info {
      padding: 0.75rem;
    }

    .comic-title {
      font-weight: bold;
      color: var(--text-primary);
      margin-bottom: 0.25rem;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    .comic-series {
      font-size: 0.9rem;
      color: var(--text-muted);
    }

    /* Visor de cómic */
    .comic-viewer {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.95);
      z-index: 1000;
      display: flex;
      flex-direction: column;
    }

    .viewer-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1rem;
      background: rgba(0, 0, 0, 0.8);
      color: white;
    }

    .viewer-info {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.25rem;
    }

    .viewer-controls {
      display: flex;
      gap: 0.5rem;
    }

    .viewer-controls button,
    .close-viewer {
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.3);
      color: white;
      padding: 0.5rem;
      border-radius: 4px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    .viewer-controls button:hover,
    .close-viewer:hover {
      background: rgba(255, 255, 255, 0.2);
    }

    .viewer-content {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }

    .page-container {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 100%;
      height: 100%;
      overflow: auto;
    }

    .comic-page {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      transition: transform 0.3s ease;
    }

    .nav-button {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(0, 0, 0, 0.7);
      color: white;
      border: none;
      padding: 1rem;
      cursor: pointer;
      z-index: 10;
      transition: background 0.3s ease;
    }

    .nav-button:hover {
      background: rgba(0, 0, 0, 0.9);
    }

    .nav-left {
      left: 1rem;
    }

    .nav-right {
      right: 1rem;
    }

    .thumbnails {
      display: flex;
      gap: 0.5rem;
      padding: 1rem;
      background: rgba(0, 0, 0, 0.8);
      overflow-x: auto;
    }

    .thumbnail {
      width: 60px;
      height: 80px;
      object-fit: cover;
      cursor: pointer;
      border: 2px solid transparent;
      transition: border-color 0.3s ease;
    }

    .thumbnail.active {
      border-color: #2196f3;
    }

    .comic-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.8);
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      z-index: 2000;
      color: white;
    }

    .comic-loader {
      width: 50px;
      height: 50px;
      border: 5px solid rgba(255, 255, 255, 0.3);
      border-top-color: white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .hidden {
      display: none !important;
    }
    
    /* Logos clicables */
    .clickable-logo {
      cursor: pointer;
      transition: opacity 0.2s ease;
    }
    
    .clickable-logo:hover {
      opacity: 0.8;
    }
  </style>

  <!-- JSZip para manejar archivos CBZ -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
  
  <!-- Firebase scripts ya están cargados en Layout.astro -->
  
  <!-- Scripts para el lector de cómics -->
  <script type="module" src="/js/comic-reader.js"></script>
</Layout>
            <p id="modal-description-text"></p>
          </div>
          <div class="modal-links">
            <a id="modal-info-link" href="#" target="_blank" class="hidden">Ver en Google Books</a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- JSZip para manejar archivos EPUB -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js" is:inline></script>
  
  <!-- JavaScript principal de la aplicaci칩n -->
  <script type="module" src="/js/app.js" is:inline></script>
</Layout>

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de libros
    match /books/{bookId} {
      allow read: if request.auth != null;
      allow write: if false; // Solo el admin puede escribir
    }
    
    // Reglas para índices de autores
    match /authors/{authorId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Reglas para el historial de lectura de usuarios
    match /readingHistory/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para usuarios autorizados (solo lectura)
    match /authorizedUsers/{userId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Metadata de la aplicación
    match /metadata/{doc} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}